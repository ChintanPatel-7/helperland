
@{
    var user = Context.Session.GetString("User");
    SessionUser sessionUser = new SessionUser();

    if (user != null)
    {
        sessionUser = JsonConvert.DeserializeObject<SessionUser>(user);
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HelperLand</title>

    <!--favicon icon-->
    <link rel="icon" type="image/x-icon" href="~/img/logo/favicon_img.png">

    <!-- Bootstrap css -->
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />

    <!-- DataTable -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.css">
    @*<link href="~/lib/datatables/css/jquery.dataTables.css" rel="stylesheet" />*@

    <!-- Website Css -->
    <link href="~/css/admin-style.css" rel="stylesheet" />
    <link href="~/css/admin-responsive.css" rel="stylesheet" />

    <!-- JQuery -->
    <script src="~/lib/jquery/jquery.js"></script>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-xl navbar-light fixed-top">
        <div class="container-fluid">
            <button class="navbar-toggler me-2" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavDropdown1" aria-controls="navbarNavDropdown" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand p-0" href="#">helperland</a>
            <ul class="navbar-nav ms-auto flex-row">
                <li class="nav-item">
                    <a class="nav-link">
                        <img src="~/img/admin-panel/admin-user.png" alt="">
                        @sessionUser.UserName
                    </a>
                </li>
                <li class="nav-item me-2">
                    <a class="nav-link"  asp-action="Logout" asp-controller="Account">
                        <img src="~/img/admin-panel/logout.png" alt="">
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <nav class="sidebar navbar navbar-expand-xl p-0">
        <div class="collapse navbar-collapse" id="navbarNavDropdown1">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">Service Management</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Role Management</a>
                </li>
                <li class='nav-link sub-menu'>
                    <a href='#' class="">Coupon Code Management<span class='arrow-icon'></span></a>
                    <ul>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Service Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Role Management</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Escalation Management</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Service Requests</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Service Providers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="#">User Management</a>
                </li>
                <li class='nav-link sub-menu'>
                    <a href='#' class="">Finance Module<span class='arrow-icon'></span></a>
                    <ul>
                        <li class="nav-item">
                            <a class="nav-link" href="#">All Transactions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Generate Payment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Customer Invoices</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Zip Code Management</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Rating Management</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Inquiry Management</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Newsletter Management</a>
                </li>
                <li class='nav-link sub-menu'>
                    <a href='#' class="">Content Management<span class='arrow-icon'></span></a>
                    <ul>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">FAQs</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <div class="main-content">
        <div class="d-flex justify-content-between flex-wrap">
            <h2 class="page-title mt-auto mb-auto">User Management</h2>
            <button class="add-btn">
                <img src="~/img/admin-panel/add.png" alt="">
                Add New User
            </button>
        </div>
        <div class="user-search-box">
            <select class="form-select input-element width-205" aria-label="User name">
                <option disabled>User name</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>

            <select class="form-select input-element width-215" aria-label="User role">
                <option disabled>User role</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>

            <div class="input-group input-element width-215">
                <span class="input-group-text" id="basic-addon1">+49</span>
                <input type="text" class="form-control" placeholder="Phone number" aria-label="Username"
                       aria-describedby="basic-addon1">
            </div>

            <input type="text" class="form-control input-element width-140" id="" placeholder="Zipcode">

            <button class="btn btn-Search width-84">Search</button>

            <button class="btn width-84 btn-clear">Clear</button>

        </div>

        @RenderBody()

    </div>

    <div class="footer pt-0">
        ©2018 Helperland. All rights reserved.
    </div>

    <!-- Client side validation scripts-->
    <partial name="_ValidationScriptsPartial" />

    <script src="~/js/admin-main.js"></script>
    <!-- Bootstrap Js-->
    <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
    <!-- fontawesome -->
    <script src="https://kit.fontawesome.com/ae6d6e0254.js" crossorigin="anonymous"></script>
    <!-- DataTable -->
    @*<script src="~/lib/datatables/js/jquery.dataTables.js"></script>*@
    <script type="text/javascript" charset="utf8"
            src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
